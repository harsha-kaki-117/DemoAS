<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Message_Activity">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/walpr">

        <Button
            android:id="@+id/dailerButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="callButton"
            android:text="Dailer" />

        <Button
            android:id="@+id/messageButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="msgButton"
            android:text="Message" />

        <Button
            android:id="@+id/gmailButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="gmlButton"
            android:text="GMAIL" />

        <Button
            android:id="@+id/mapButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="mapButton"
            android:text="Maps" />

        <Button
            android:id="@+id/webButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="websiteButton"
            android:text="Web" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>